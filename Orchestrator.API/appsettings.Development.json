{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=OrchestratorDb;Integrated Security=True;TrustServerCertificate=True;"
  },
  "JwtSettings": {
    "Secret": "FOR_DEVELOPMENT_THIS_WILL_BE_TAKEN_FROM_USER_SECERET_FROM_VISUAL_STUDIO", //A secrets.json will overrides your appsettings.json for any matching keys
    "Issuer": "OrchestratorAPI",
    "Audience": "OrchestratorClients",
    "ExpiryMinutes": 60
  },
  "StorageSettings": {
    "RootPath": "D:\\Musaed Docs\\musaed orchestrator\\StorageBucket"
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "DefaultConnection",
          "tableName": "ServerLogs",
          "autoCreateSqlTable": true
        }
      }
    ]
  }
}
